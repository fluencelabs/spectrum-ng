{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "flux": {
    "fileMatch": ["flux/**/*\\.(yaml|yml)$"]
  },
  "helm-values": {
    "fileMatch": ["flux/**/*\\.(yaml|yml)$"]
  },
  "kubernetes": {
    "fileMatch": ["flux/**/*\\.(yaml|yml)$"]
  },
  "kustomize": {
    "fileMatch": ["flux/**/*\\.(yaml|yml)$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["flux/**/*\\.(yaml|yml)$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?_version: (?<currentValue>.*)\\s"
      ]
    },
    {
      "fileMatch": ["flux/**/*\\.(yaml|yml)$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?version: (?<currentValue>.*)\\s"
      ]
    },
    {
      "fileMatch": ["flux/**/*\\.(yaml|yml)$"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s.*?tag: (?<currentValue>.*)\\s"
      ]
    }
  ]
}
